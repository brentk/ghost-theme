{{!< default}}
{{#if @blog.navigation}}
	<a class="menu-button" href="#"><span class="burger">&#9776;</span><span class="word">Menu</span></a>
{{/if}}
{{#post}}
	<div id="brentk-post-wrapper">
		<h2 class="brentk-post-title"><a href="{{url}}">{{{title}}}</a></h2>
		<section class="brentk-post-body">{{content}}</section>
		<div class="brentk-post-byline-block">
			<img class="brentk-author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />
			<h4 class="brentk-post-byline">{{author}} | <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></h4>
		</div>
		<br class="clearfix">
	</div>
{{/post}}
